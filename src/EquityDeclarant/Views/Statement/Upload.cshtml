@model EquityDeclarant.Models.InputModels.StatementInputModel

@{
    ViewData["Title"] = "Upload Statement";
}

<h2>Upload statement generated by Revolut app</h2>
<div class="container">
    <div class="center-custom">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div class="custom-file">
                <label asp-for="Statement">Upload statement:</label>
                <input type="file" class="custom-file-input" asp-for="Statement" aria-describedby="fileHelpBlock">
                <label class="custom-file-label" asp-for="Statement">State</label>
                <small id="fileHelpBlock" class="form-text text-muted">
                    Valid formats are csv.
                </small>
                <span asp-validation-for="Statement" class="text-danger"></span>
            </div>

            <input type="submit" value="Upload" class="btn btn-primary"/>

        </form>
    </div>
</div>